@{
    //Para obter o Bundling (combina múltiplos arquivos em um único)
    //e Minification (minimiza o arquivo) trabalhando
    //adequadamente o Web.config não pode estar em modo de DEBUG...
    #if DEBUG
        BundleTable.EnableOptimizations = false;
    #else
        BundleTable.EnableOptimizations = true;
    #endif
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eCommerce | @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cabin" rel="stylesheet">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="layout">
    @if (ViewBag.IsCartPage == null)
    {
        <div id="cart-header-page">
            @Html.Partial("_Carrinho")
        </div>
    }
    <header id="header">
        <div class="topbar">
            <div class="wrap">
                <a href="/" id="logo"></a>
                <div class="content-header-navigation">
                    @using (@Html.BeginForm(actionName: "Consultar", controllerName: "Produto", method: FormMethod.Get, htmlAttributes: new { @class = "form-search" }))
                    {
                        <figure class="image-menu">
                            <img src="~/img/logo-2.png" width="100%" />
                        </figure>
                        <div class="form-item">
                            <input type="text" placeholder="Pesquise por produtos" name="pesquisar" class="form-control" id="pesquisaProd" />
                            <button type="submit" id="btn-submit-search"><i class="icon icon-search"></i></button>
                        </div>
                    }
                    @Html.Partial("_LoginPartial")
                    <button type="button" id="btn-cart" class="btn"><i class="icon icon-basket"></i><span class="cart-count">(0)</span></button>
                </div>
            </div>
        </div>
        @Html.Action("_MenuCategorias", "Categoria")
    </header>
    <div class="main">
        @RenderBody()
        <div class="overlay"></div>
    </div>
    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h3>Categorias</h3>
                    @Html.Action("_MenuCategorias", "Categoria")
                </div>

                <div class="col-md-4 sobre">
                    <h3>Sobre</h3>
                    <ul>
                        <li><a href="https://github.com/JulioCKlein" class="elements"><i class="fa fa-github"></i> Julio</a></li>
                        <li><a href="https://github.com/marcelob133" class="elements"><i class="fa fa-github"></i> Marcelo</a></li>
                        <li><a href="https://github.com/JoHNNyRiver" class="elements"><i class="fa fa-github"></i> João</a></li>
                        <li><a href="https://github.com/RodrigoLS" class="elements"><i class="fa fa-github"></i> Rodrigo</a></li>
                    </ul>
                </div>

                <div class="col-md-4 minha-conta">
                    <h3>Minha Conta</h3>
                    <ul>
                        <li><a href="@Url.Action("Login", "Cliente")" class="elements">Login</a></li>
                        <li><a href="@Url.Action("Cadastrar", "Cliente")" class="elements">Cadastro</a></li>
                        <li><a href="@Url.Action("Senha", "Cliente")" class="elements">Esqueci a senha</a></li>
                        <li><a href="@Url.Action("Consultar", "Pedido")" class="elements">Meus Pedidos</a></li>
                    </ul>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <h3>Modos de pagamento</h3>
                    <div class="pagtos-container" id="footer_formas_pagamento">
                        <div class="pagtos">
                            <ul class="list">
                                <li class="item visa first odd">
                                    <span class="icon" rel="//www.cz10.com.br/media/custom/pagtos/pagtos-1489687561.png">
                                        <img src="//www.cz10.com.br/media/custom/pagtos/pagtos-1489687561.png" alt="Visa" title="Visa">
                                    </span>
                                </li>
                                <li class="item mastercard even">
                                    <span class="icon" rel="//www.cz10.com.br/media/custom/pagtos/pagtos-1489687767.png">
                                        <img src="//www.cz10.com.br/media/custom/pagtos/pagtos-1489687767.png" alt="Mastercard" title="Mastercard">
                                    </span>
                                </li>
                                <li class="item american-express odd">
                                    <span class="icon" rel="//www.cz10.com.br/media/custom/pagtos/pagtos-1489687931.png">
                                        <img src="//www.cz10.com.br/media/custom/pagtos/pagtos-1489687931.png" alt="American Express" title="American Express">
                                    </span>
                                </li>
                                <li class="item aura even">
                                    <span class="icon" rel="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688065.png">
                                        <img src="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688065.png" alt="Aura" title="Aura">
                                    </span>
                                </li>
                                <li class="item diners odd">
                                    <span class="icon" rel="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688429.png">
                                        <img src="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688429.png" alt="Diners" title="Diners">
                                    </span>
                                </li>
                                <li class="item hipercard even">
                                    <span class="icon" rel="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688547.png">
                                        <img src="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688547.png" alt="Hipercard" title="Hipercard">
                                    </span>
                                </li>
                                <li class="item elo odd">
                                    <span class="icon" rel="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688643.png">
                                        <img src="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688643.png" alt="Elo" title="Elo">
                                    </span>
                                </li>
                                <li class="item boleto last even">
                                    <span class="icon" rel="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688742.png">
                                        <img src="//www.cz10.com.br/media/custom/pagtos/pagtos-1489688742.png" alt="Boleto" title="Boleto">
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 newsletter">
                    <h3>Assine nossa newsletter</h3>
                    <form class="form-group" align="center">
                        <input type="text" class="form-control" required placeholder="Ex: Gandalf@contact.com" />
                        <button class="btn">Enviar</button>
                    </form>
                </div>

                <div class="logo-text-footer col-md-4">
                    <img src="~/img/logo-2.png" alt="logo" width="100%" />
                </div>
            </div>
        </div>
        <p><strong>&copy; Julio/João/Rodrigo/Marcelo/Alexandre | @DateTime.Now.Year</strong></p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" ></script>
    @Scripts.Render("~/bundles/jqueryui")
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/autocomplete")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
   
</body>
</html>
